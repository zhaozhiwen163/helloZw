/* pages/detail/detail.wxss */
.container {padding-bottom: 100rpx;}
/* 焦点图 - start */
.swiper-wrap {
  overflow: hidden;
  background-color: #fff;
  height: 750rpx;
}
.swiper-wrap swiper-item {
  height: 750rpx;
  position: relative;
}
.swiper-wrap image {
  display: block;
  min-height: 80%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
/* 商品详情 */
.item-info {
  background-color: #fff;
  padding: 0 30rpx;
  color: #a9a9a9;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 20rpx;
}
.item-tit {
  font-size: 32rpx;
  color: #353535;
}
.item-price {line-height: 100rpx;}
.item-price .del-price {
  display: inline-block;
  position: relative;
  padding: 0 15rpx;
  margin: 0 15rpx;
  font-size: 32rpx;
}
.del-price::before {
  content: "";
  position: absolute;
  top:50%;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-top: 2rpx solid #a9a9a9;
}
.price {
  color: #e4383b;
  font-size: 40rpx;
}
.attribute {
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  padding: 20rpx 30rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.attribute .attribute-key {
  width: 90rpx;
  color: #a9a9a9;
}
.attribute .attribute-val {
  padding-left: 10rpx;
  width: 590rpx;
  overflow: hidden；
}
.spec {
  float: left;
  padding: 0 20rpx;
  line-height: 60rpx;
  color: #a9a9a9;
  border-width: 1rpx;
  border-style: solid;
  border-color: #fff;
  border-radius: 6rpx;
  transition: all .2s;
  font-size: 26rpx;
}
/* 规格选中样式 */
.attribute-val .specOn {
  border-color: #390;
  color: #390;
  font-size: 30rpx;
}
.tip-icon {
  line-height: 40rpx;
  padding: 0 15rpx;
  background-color: #f56565;
  border-radius: 6rpx;
  color: #fff;
  float: left;
  margin-right: 15rpx;
  margin-top: 15rpx;
  font-size: 22rpx;
}

.purchase {
  top: auto;
  bottom: 0;
  display: flex;
}
.purchase button {
  flex: 1;
  border-radius: 0;
}
.selectProvider {
  background: url('data:image/png;base64,') no-repeat right center;
  background-size: 46rpx 46rpx;
}

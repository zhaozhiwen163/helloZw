/* 商品说明书 */
.instructions {
  display: flex;
  background-color: #fff;
  text-align: center;
  font-size: 24rpx;
  color: #353535;
}
.instructions text {
  flex: 1;
  line-height: 90rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #a9a9a9;
  transition: all .2s;
}
/* 产品详情Tab切换 */
.instructions .tabOn {
  color: #e4383b;
  font-size: 30rpx;
  border-bottom-color: #e4383b;
}
.tabOne,.tabThree {
  padding: 20rpx 30rpx;
  background-color: #fff;
  word-break: break-all;
  width: 750rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.tabOne image,.tabThree image {width: 100%!important;}
/* 商品属性 */
.attr-wrap {
  margin: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
  background-color: #fff;
}
.attr-line {
  overflow: hidden;
  line-height: 2;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  font-size: 28rpx;
}
.attr-line:last-child {border: none;}
.attr-wrap .attr-key {
  flex:2;
  padding: 0 10rpx;
  border-right: 1rpx solid #ddd;
}
.attr-wrap .attr-val {
  flex:6;
  padding: 0 10rpx;
}


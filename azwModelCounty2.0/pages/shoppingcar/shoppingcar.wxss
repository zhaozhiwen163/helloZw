/* 删除按钮 */
.del-order {
    display: block;
    width: 90rpx;
    border-left: 1rpx solid #ddd;
    margin: -30rpx 0;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 34rpx 40rpx;
}
/* 结算按钮 */
.footBar {
    top: auto;
    bottom: 0;
    height: 110rpx;
    background-color: #fff;
    display: flex;
    line-height: 110rpx;
    font-size: 32rpx;
    border-top: 1rpx solid #ddd;
}
.footBar .totail-price {
    flex: 1;
    color: #353535;
    /* text-align: right; */
    padding-left: 30rpx;
}
.footBar .totail-price .sumPrice {
  color: #e5383c;
  font-size: 46rpx;
}
.footBar .settlement-btn {
    width: 300rpx;
    text-align: center;
    line-height: 110rpx;
    font-size: 40rpx;
    border-radius: 0;
    margin-left: 20rpx;
}
button::after {border: none;}
.checkAllBtn {margin-left: 30rpx;}
/* pages/modelField/modelField.wxss */
.crop-wrap {
  margin: 20rpx 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 10rpx 15rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.picker {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.swiper-tab {
  display: flex;
  font-size: 30rpx;
  background-color: #fff;
}
.swiper-tab-list {
  flex: 1;
  border-bottom: 1rpx solid #ddd;
  text-align: center;
  line-height: 75rpx;
  transition: all .2s;
}
.swiper-tab .on {
  border-color: #f60;
  font-size: 34rpx;
  color: #f60;
}

.item {
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
}
.item-img {
  width: 240rpx;
  height: 180rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items:center;
}
.item-img image {
  max-width: 240rpx;
  max-height: 180rpx;
}

.item-info {
  width: 450rpx;
}
.item-info view {
  font-size: 26rpx;
  color: #666;
  line-height: 46rpx;
}
.item-info .item-tit {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}
.item-info .item-tit::before {
  background-color: #f60;
  border: 1rpx solid #f60;
  display: inline-block;
  padding: 2rpx;
  width: 42rpx;
  height: 42rpx;
  line-height: 40rpx;
  text-align: center;
  background-clip: content-box; 
  color: #fff;
  font-size: 26rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.business::before {content: "企";}
.government::before {content: "政";}
/* 加载更多 */
.load-more {
  /* background-color: #fff; */
  text-align: center;
  font-size: 36rpx;
  color: #bbb;
  margin-top: 20rpx;
}
.hide {
  display: none;
}
.show {
  display: block;
}
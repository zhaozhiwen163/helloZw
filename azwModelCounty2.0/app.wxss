.baseline {
  line-height: 90rpx;
  text-align: center;
}
.baseline text {
  position: relative;
  padding: 0 20rpx;
  font-size: 36rpx;
  color: #a9a9a9;
}
.baseline text::after,.baseline text::before {
  content: "";
  position: absolute;
  bottom: 0;
  top: 0;
  left: -120rpx;
  margin: auto;
  height: 3rpx;
  background-color: #a9a9a9;
  width: 120rpx;
}
.baseline text::after {
  left: auto;
  right: -120rpx;
}









